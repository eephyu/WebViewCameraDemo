<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebViewCameraDemo.UrlPage"
             Title="UrlPage">
    <VerticalStackLayout VerticalOptions="FillAndExpand" Padding="10,20">
        <StackLayout VerticalOptions="FillAndExpand" Spacing="10">
            <Label 
            Text="Please input html page url to try camera option!"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="StartAndExpand" />
            <Entry x:Name="txtUrl"></Entry>
            <Button x:Name="btnNext" Clicked="btnNext_Clicked" Text="Next"></Button>
        </StackLayout>        
    </VerticalStackLayout>
</ContentPage>